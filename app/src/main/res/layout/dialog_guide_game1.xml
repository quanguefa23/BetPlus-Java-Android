<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/curve"
    android:layout_width="500dp"
    android:weightSum="10"
    android:layout_height="300dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"
        android:background="@drawable/curve2">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hướng dẫn chơi"
            android:textColor="#E4ECDC"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="8.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có 5 Pokemon để bạn đặt cược."
                android:textSize="16sp"
                android:textColor="#1A1A12"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cần đặt cược tối thiểu 1 Pokemon và tối đa 5 Pokemon trước khi bắt đầu cuộc đua."
                android:textSize="16sp"
                android:textColor="#1A1A12"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sau khi đặt cược, tài khoản sẽ lập tức bị trừ tiền."
                android:textSize="16sp"
                android:textColor="#1A1A12"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nếu Pokemon bạn đặt cược về đích đầu tiên, bạn sẽ nhận được số coin tương đương K lần số coin đặt cược cho Pokemon đó."
                android:textSize="16sp"
                android:textColor="#1A1A12"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trong đó, K là hệ số thắng cược, đó chính là chỉ số hiển thị ở bên cạnh Pokemon lúc đặt cược."
                android:textSize="16sp"
                android:textColor="#1A1A12"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hệ số thắng cược càng cao, khả năng về đích đầu tiên càng thấp."
                android:textSize="16sp"
                android:textColor="#1A1A12"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hệ số thắng cược của mỗi Pokemon là thay đổi trong từng lượt đua."
                android:textSize="16sp"
                android:textColor="#1A1A12"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chúc bạn may mắn!"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1A1A12"
                />

        </LinearLayout>
    </ScrollView>


    <Button
        android:layout_gravity="center_horizontal"
        android:textColor="#E3E9DD"
        android:background="@drawable/selector"
        android:id="@+id/out_ok"
        android:textAllCaps="false"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Đã hiểu"/>
</LinearLayout>